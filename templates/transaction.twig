{% extends 'layout.twig' %}

{% block content %}
<h1>Transaction</h1>
<p>Data of a transaction</p>

<div class="transaction {{ transaction.value > 0 ? 'income' : 'outgoings' }} {{ transaction.account.name | lower }}">
    <h2 class="value">{{ transaction.account.name }}: Â£{{ transaction.value|number_format }}</h2>
    <p>{{ transaction.date | date('j F Y (D)') }}</p>
    <p>{{ transaction.description | hashtagify }}</p>
    <p><a href="{{ path_for('transaction-edit', { 'id': transaction.id }) }}">edit</a></p>
</div>
{% endblock %}
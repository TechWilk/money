{% for month, transactionsInMonth in transactions | group_by(=> _.date|date('M Y')|capitalize) %}
<div class="month">
    <h2>{{ month }}</h2>
    {% for transaction in transactionsInMonth %}
    {% include 'transaction-slim.twig' %}
    {% endfor %}
</div>
{% endfor %}

